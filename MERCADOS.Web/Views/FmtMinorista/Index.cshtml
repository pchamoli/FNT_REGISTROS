@model MERCADOS.Web.Models.FormatoPrincipalModelMin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<table class="table">
    @foreach (var nodo in Model.Cabecera)
    {
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                Código de Formato:
                @Html.DisplayFor(modelCab => nodo.id_instancia)
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6" >
                Fecha de Formato:
                @Html.DisplayFor(modelCab => nodo.fecha_formato)
            </div>
        </div>
        <br />
        <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    Formato:
                    @Html.DisplayFor(modelCab => nodo.nom_formato)
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    Mercado:
                    @Html.DisplayFor(modelCab => nodo.nom_mercado)
                </div>
        </div>
     }
</table>
<br />
<p>
    @Html.ActionLink("Nuevo Registro", "Create", new { formatoID = ViewBag.id_formato, instanciaID = ViewBag.id_instancia }, new { @class="btn btn-primary"})
</p>
<br />
<table class="table table-striped table-hover table-condensed tabla small">
    <thead class="cabecera">
        <th>
            Nombre de especie
        </th>
        <th>
            Unidad
        </th>
        <th>
            Procedencia
        </th>
        <th>
            Puesto
        </th>
        <th>
            Precio mín.
        </th>
        <th>
            Precio máx.
        </th>
        <th>
            Presentación
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </thead>

    @foreach (var item in Model.Detalle)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom_especie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_unidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_lugar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.puesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio_min)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio_max)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_presentacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id_registro, formatoID = ViewBag.id_formato, instanciaID = ViewBag.id_instancia }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id_registro }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id_registro })
            </td>
        </tr>
    }
</table>
<br />
Total registros: @ViewBag.TotalCountMinorista
<br />
<br />
<div>
    <a class="btn btn-default" href="./Instancia">Regresar</a>
    @*@Html.ActionLink("Regresar", null, "Instancia", new { @class = "btn btn-default"})*@
    @Html.ActionLink("Confirmar Formato", "Confirmar", "FmtMinorista", new { @class = "btn btn-primary" })
</div>
