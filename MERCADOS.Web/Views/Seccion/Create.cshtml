@model MERCADOS.Web.Models.SeccionModel

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}

<script type="text/javascript">
    $(document).ready(function () {
        PrepareCheckbox();
    });
    function PrepareCheckbox(){
        document.getElementById("EsActivo").checked = true;
    }
</script>

<h2>Nueva sección</h2>
<br />
<br />

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Registro de una nueva sección</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="text-align: left;">
            @Html.LabelFor(model => model.id_formato, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.id_formato, (SelectList)ViewBag.FormatoList, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.id_formato, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="text-align: left;">
            @Html.LabelFor(model => model.nom_seccion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nom_seccion, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase" } })
                @Html.ValidationMessageFor(model => model.nom_seccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="text-align: left;">
            @Html.LabelFor(model => model.orden_seccion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.orden_seccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.orden_seccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="text-align: left;">
            @Html.LabelFor(model => model.EsActivo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EsActivo, new { htmlAttributes = new { @checked = "checked" } })
                @Html.ValidationMessageFor(model => model.EsActivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
