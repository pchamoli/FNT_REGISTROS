@model PagedList.IPagedList<MERCADOS.Web.Models.SeccionViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
<link rel="stylesheet" type="text/css" href="~/Content/comun.css" />
<link rel="stylesheet" type="text/css" href="~/Content/formularios/Comun.css" />
<link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
<script src="js/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="js/bootstrap.min.js" type="text/javascript"></script>
<script src="js/jquery.validate.min.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de secciones</h2>
<br />
@using (Html.BeginForm("Index", "Seccion", FormMethod.Get))
{
    <!--@Html.TextBox("SearchString", ViewBag.CurrentFilter as string)-->
    <div class="row">
        <div class="col-md-8">
            <form class="form-inline">
                <div class="form-group">
                    <table>
                        <tr>
                            <th><label for="exampleInputEmail1" style="color:dimgray">Seccion:</label></th>
                            <th><input type="text" class="form-control" name="SearchString" style="width:250px;margin-left:3px" placeholder="seccion" /></th>
                        </tr>
                    </table>
                </div>
            </form>
        </div>

        <div class="col-md-4 text-right">
            <button type="button" class="btn btn-primary">Buscar</button>
            <button type="button" class="btn btn-primary">@Html.ActionLink("Limpiar", "Index", "Seccion", new { Style = "color:White" })</button>
        </div>
    </div>
}
<p>
    <button type="button" class="btn btn-primary">@Html.ActionLink("Nueva seccion", "Create", "Seccion", new { Style = "color:White" })</button>
</p>
<br />
<table class="table table-striped table-hover table-condensed tabla small">
    <thead class="cabecera">
        <tr>
            <th>
                @Html.ActionLink("Nombre de formato", "Index", new { sortOrder = ViewBag.Name1SortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Nombre de sección", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Orden de sección", "Index", new { sortOrder = ViewBag.OrdenSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Ultimo usuario", "Index", new { sortOrder = ViewBag.UsuarioSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Ultima fecha", "Index", new { sortOrder = ViewBag.FechaSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Estado", "Index", new { sortOrder = ViewBag.EstadoSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Accion", "Index", new { sortOrder = ViewBag.Acciones, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom_formato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_seccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ult_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ult_fecha)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id_seccion }, new { Style = "color:White" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id_seccion }, new { Style = "color:White" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id_seccion }, new { Style = "color:White" })
            </td>
        </tr>
    }

</table>
<div>
    <ul class="pagination pagination-sm pull-left">
        <!--
        Primero @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount Ultimo
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        -->
        <li class="enable active">
            <a href="#">Primero</a>
        </li>
        <li class="enable">
            <a href="#">@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)</a>
        </li>
        <li class="enable">
            <a href="#">2</a>
        </li>
        <li class="enable">
            <a href="#">Ultimo</a>
        </li>
    </ul>

    <!--
      <div class="col-lg-12">
          @Html.ActionLink("Regresar", "Index", "Home")
      </div>
    -->
</div>
<br />
<div class="col-lg-12" style="margin-top:12px">
    © 2016 - Ministerio de la Producción
</div>