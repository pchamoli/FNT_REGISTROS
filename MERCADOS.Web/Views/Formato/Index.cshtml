@model PagedList.IPagedList<MERCADOS.Web.Models.FormatoViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
<link rel="stylesheet" type="text/css" href="~/Content/comun.css" />
<link rel="stylesheet" type="text/css" href="~/Content/formularios/Comun.css" />
<link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
<script src="js/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="js/bootstrap.min.js" type="text/javascript"></script>
<script src="js/jquery.validate.min.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de formatos</h2>
<br />
@using (Html.BeginForm("Index", "Formato", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-8">
            <form class="form-inline">
                <div class="form-group">
                    <table>
                        <tr>
                            <th><label for="exampleInputEmail1" style="color:dimgray">Formato:</label></th>
                            <th><input type="text" class="form-control" name="SearchString" style="width:250px;margin-left:3px" placeholder="formato" /></th>
                        </tr>
                    </table>
                </div>
            </form>
        </div>

        <div class="col-md-4 text-right">
            <button type="button" class="btn btn-primary">Buscar</button>
            <button type="button" class="btn btn-primary">@Html.ActionLink("Limpiar", "Index", "Formato", new { Style = "color:White" })</button>
        </div>
    </div>
}
<p>
    <button type="button" class="btn btn-primary">@Html.ActionLink("Nuevo formato", "Create", "Formato", new { Style = "color:White" })</button>
</p>
<br />
<table class="table table-striped table-hover table-condensed tabla small">
    <thead class="cabecera">
        <tr>
            <th>
                @Html.ActionLink("Tipo de formato", "Index", new { sortOrder = ViewBag.TipoSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Nombre de formato", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Ultimo usuario", "Index", new { sortOrder = ViewBag.UsuarioSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Ultima fecha", "Index", new { sortOrder = ViewBag.FechaSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Estado", "Index", new { sortOrder = ViewBag.EstadoSortParm, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
            <th>
                @Html.ActionLink("Accion", "Index", new { sortOrder = ViewBag.Acciones, currentFilter = ViewBag.CurrentFilter }, new { Style = "color:White" })
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo_formato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_formato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ult_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ult_fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id_formato }, new { Style = "color:Red" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id_formato }, new { Style = "color:Red" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id_formato }, new { Style = "color:Red" })
            </td>
        </tr>
    }

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<br />
<div>
    @Html.ActionLink("Regresar", "Index", "Home")
</div>
